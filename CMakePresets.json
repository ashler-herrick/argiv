{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "displayName": "vcpkg (recommended)",
      "description": "Build with vcpkg-managed dependencies (QuantLib, Arrow)",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "system",
      "displayName": "System packages",
      "description": "Build with system-installed QuantLib and Apache Arrow"
    }
  ]
}
